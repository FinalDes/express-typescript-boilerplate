{
    "compileOnSave": true,
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "commonjs",
      "lib": [
        "esnext",
        "dom"
      ],
      "target": "es5",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "removeComments": true,
      "strict": true,
      "strictNullChecks": true
    },
    "include": [
      "src/**/*"
    ],
  }